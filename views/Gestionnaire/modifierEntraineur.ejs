<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
</head>

<body>


    <div
        class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
        <h1 class="h2">Modification</h1>

        <div class="btn-toolbar mb-2 mb-md 0">
            <div class="btn-group me-2">
                <button class="btn btn-outline-primary">
                    <i class="bi bi-info-circle"></i> Aide
                </button>
            </div>
        </div>
    </div>

    <div class="col py-1">
        <div class="row">
            <div class="col">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/compteGestionnaire/<%= gestId %>">Acceuil</a></li>
                        <li class="breadcrumb-item active"><a href="/monequipe/<%= gestId %>">Mon equipe</a>
                        </li>
                        <li class="breadcrumb-item active">Modifier entraineur</li>
                    </ol>
                </nav>
            </div>

        </div>
    </div>
    <form action="/modifier_entraineur/<%= gestId %>?_method=PUT" method="POST" novalidate
        enctype="multipart/form-data">
        <div>
            <label for="validationCustom01" class="form-label">Nom :</label>
            <input type="text" class="form-control" name="nom" id="validationCustom01"
                value="<%= result.length> 0 ? result[0].nom_ent : 'null' %>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom02" class="form-label">Prenom :</label>
            <input type="text" class="form-control" name="prenom" id="validationCustom02"
                value="<%= result.length> 0 ? result[0].prenom_ent : 'null' %>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom02" class="form-label">Nationalite :</label>
            <input type="text" class="form-control" name="nationalite" id="validationCustom02"
                value="<%= result.length> 0 ? result[0].nationalite_ent: 'null' %>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom01" class="form-label">Photo:</label>
            <input type="file" class="form-control" name="photo" accept="image/*" id="validationCustom01"
                value="<%= result.length> 0 ? result[0].img_ent : 'null' %>">
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom01" class="form-label">Date de Naissance :</label>
            <input type="date" class="form-control" name="date" id="validationCustom01"
                value="<%= result.length > 0 && result[0].date_naiss_ent !== null ? result[0].date_naiss_ent.toISOString().substring(0,10) : '' %>"
                required>

            <div class="valid-feedback"></div>
        </div>

        <div>

            <div
                class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom border-primary">
                <h1 class="h2">Compte de l'entraineur</h1>
            </div>

            <div>
                <label for="validationCustom01" class="form-label">E-mail</label>
                <input type="email" class="form-control" name="email"
                    value="<%= result.length> 0 ? result[0].email_co : 'null' %>" required>
                <div class="valid-feedback"></div>

            </div>
            <div>
                <label for="validationCustom01" class="form-label">Mot de passe </label>
                <div class="input-group">
                    <input type="password" class="form-control" name="motdepasse" id="password"
                        value="<%= result.length> 0 ? result[0].mot_de_passe : 'null' %>" required>
                    <span class="input-group-text"><i id="icon" class="bi bi-eye-fill "></i></span>
                </div>

                <div class="valid-feedback"></div>
            </div>

        </div>
        <div>
            <button class="btn btn-primary mt-3  " type="submit">Modifier</button>
        </div>
    </form>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
        integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
        integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
        crossorigin="anonymous"></script>
    <script>

        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()

        //seepassword
        document.getElementById("icon").addEventListener("click", function () {
            var passwordField = document.getElementById("password");
            var icon = this.querySelector("i");

            if (password.type === "password") {
                password.type = "text";
                icon.classList.remove("bi-eye-fill");
                icon.classList.add("bi-eye-slash-fill");
            } else {
                password.type = "password";
                icon.classList.remove("bi-eye-slash-fill");
                icon.classList.add("bi-eye-fill");
            }
        });

    </script>
</body>

</html>