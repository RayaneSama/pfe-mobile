<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>

<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"> Prochaine affectations </h1>

    <div class="btn-toolbar mb-2 mb-md 0">
        <div class="btn-group me-2">
            <button class="btn btn-outline-primary">
                <i class="bi bi-info-circle"></i> Aide
            </button>
        </div>
    </div>
</div>
<div class="col py-1">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/compteGestionnaire/<%= gestId %>">Acceuil</a></li>

                    <li class="breadcrumb-item active">Affectation a suivre </li>
                </ol>
            </nav>
        </div>

    </div>
</div>




<table class="table table-striped mt-3">
    <thead>
        <tr>

            <th scope="col" class="text-center">Id</th>
            <th scope="col" class="text-center">Match</th>
            <th scope="col" class="text-center">Date</th>
            <th scope="col" class="text-center">Heure</th>
        </tr>
    </thead>
    <tbody>
        <% if (result.length> 0) { %>
            <% result.forEach(element=> { %>
                <tr class="align-middle">
                    <td style="font-size: 16px;">
                        <%= element.id_ma %>
                    </td>
                    <td style="font-size: 16px;">
                        <%= element.equipe_1 %>
                            <span style="font-size: 18px; font-weight: 700; color: rgb(228, 105, 98);"> - </span>
                            <%= element.equipe_2 %>
                    </td>
                    <td style="font-size: 16px;">
                        <div class="col">
                            <% var dateOfBirthString=element.date_ma; var dateOfBirth=new Date(dateOfBirthString); var
                                formattedDateOfBirth=("0" + dateOfBirth.getDate()).slice(-2) + "/" + ("0" +
                                (dateOfBirth.getMonth() + 1)).slice(-2) + "/" + dateOfBirth.getFullYear(); %>
                                <%= formattedDateOfBirth %>
                        </div>
                    </td>
                    <td style="font-size: 16px;">
                        <div class="col">
                            <% const timeString=element.horaire_ma; const [hours,
                                minutes]=timeString.split(":").slice(0, 2); const formattedTime=`${hours}:${minutes}`;
                                %>
                                <%= formattedTime %>
                        </div>
                    </td>
                </tr>
                <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="4" style="text-align: center; font-size: 16px;">
                                Vous n'avez aucun match a g√©rer pour l'instant
                            </td>
                        </tr>
                        <% } %>
    </tbody>

</table>