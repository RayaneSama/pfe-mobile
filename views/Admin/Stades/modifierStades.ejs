<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Modification: <%= result[0].nom_std%>
    </h1>

</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">
                        <%= result[0].nom_std%>

                    </li>
                </ol>
            </nav>
        </div>

    </div>

</div>


<form action="/editStades/<%= result[0].id_std %>?_method=PUT" method="POST">

    <div class="row form-group mb-4">
        <div>
            <label for="validationCustom01" class="form-label">Nom</label>
            <input type="text" class="form-control" name="nom_stade" id="validationCustom01"
                value="<%= result[0].nom_std %>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom02" class="form-label">Ville</label>
            <input type="text" class="form-control" name="ville_stade" id="validationCustom02"
                value="<%= result[0].ville_std%>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom02" class="form-label">Capacite</label>
            <input type="text" class="form-control" name="capacite_stade" id="validationCustom02"
                value="<%= result[0].capacite_std%>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
            <label for="validationCustom02" class="form-label">Date de cr√©ation</label>
            <input type="text" class="form-control" name="date_de_creation_stade" id="validationCustom02"
                value="<%= result[0].date_crt%>" required>
            <div class="valid-feedback"></div>
        </div>
        <div>
        </div>
        <div class="form-group mb-4">
            <button type="submit" class="btn btn-primary mt-3">Modifier Stade</button>

            <button type="button" class="btn btn-danger mt-3" data-bs-toggle="modal" id="deleteButton"
                data-bs-target="#deleteModal">Supprimer Stade</button>

        </div>

</form>



<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Vous etes sur le point de SUPPRIMER un stade .</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>
                    Ceci supprimera le stade de votre systeme <b class="fw-bold">
                        <%= result[0].nom_std%> de la ville
                            <%= result[0].ville_std%>
                    </b><br />
                    Etes-vous sur ?
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fermer</button>
                <form action="/supprimerStades/<%= result[0].id_std %>?_method=DELETE" method="POST"
                    class="position-relative">
                    <button type="submit" class="btn btn-danger">Oui, Supprimer le stade</button>
                </form>
            </div>
        </div>
    </div>
</div>
