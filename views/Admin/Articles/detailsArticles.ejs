<div class="d-flex justify-content-between flex-wrap flex-md nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">
        <%= result[0].titre_art%>
    </h1>
</div>

<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">
                        <%= result[0].titre_art %>
                    </li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<ul class="list-group">
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"><b>Date:</b></div>
            <div class="col">
                <% if(result.length> 0) { var dateOfArticleString = result[0].date_art;
                    var dateOfArticle = new Date(dateOfArticleString); var
                    formattedDateOfArticle = ("0" + dateOfArticle.getDate()).slice(-2) + "/"
                    + ("0" + (dateOfArticle.getMonth() + 1)).slice(-2) + "/" +
                    dateOfArticle.getFullYear(); %> <%= formattedDateOfArticle %>
                        <% } else { // Output 'null' if no result is available %> null <% } %>
            </div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"><b>Titre:</b></div>
            <div class="col">
                <%= result[0].titre_art %>
            </div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"><b>Description:</b></div>
            <div class="col">
                <%= result[0].description_art %>
            </div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"><b>Image:</b></div>
            <div style="position: relative; margin-left: 50px">
                <% if (result.length> 0 && result[0].image_art) { %>
                    <img src="/images/<%= result[0].image_art %>" class="img-fluid mb-3 mt-3 rounded"
                        alt="Description of the image" style="
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
          " />
                    <% } else { %>
                        <img src="/images/default.jpg" class="img-fluid rounded-circle mb-3 mt-3" alt="image" style="
            width: 200px;
            height: 200px;
            object-fit: cover;
            border-radius: 50%;
          " />
                        <% } %>
            </div>
        </div>
    </li>
    <li class="list-group-item">
        <div class="row">
            <div class="col" style="max-width: 140px"><b>Auteur:</b></div>
            <div class="col">
                <%= result[0].auteur_art %>
            </div>
        </div>
    </li>
</ul>